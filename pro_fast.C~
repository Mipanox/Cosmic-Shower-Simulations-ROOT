TRandom *r;
float lambda_proton=87;
float d_h = 1;
float h_max = 300;
float rho0 = 1.021/1000;
float A=8;

void pro_fast(){
  r = new TRandom();
  
  TH1F *h1 = new TH1F("h1","h1",100,0,200);
  TRandom *r = new TRandom();

  for (int ievt=0; ievt<1000000; ievt++){
    float p_int_f = Get_P_Int_Height_fast();
    h1 -> Fill(p_int_f);

  }
  h1 -> Draw();

}

float Get_P_Int_Height_fast(){
  float X=r -> Exp(lambda_proton);
  float h=Get_H_from_X(X);
  return h;
}

float Get_H_from_X(float X){
  float h = -log(X/(rho0*A*100000))*A;
  return h;

}
