TRandom *r;
const int N = 8;

// In C++, array IS address
void split_by_N(double In, double branch[])
{
  double frac[N];
  double sum = 0;

  for (int i=0; i<N; i++)
  {
    frac[i] = r -> Rndm();
    sum    += frac[i];
  }
  for (int i=0; i<N; i++)
  {
    branch[i] = frac[i]/sum*In;
  }
}

void pizza_N()
{
  float P_mass = 1; // total pizza mass
  
  r = new TRandom();
  TH1F *h1 = new TH1F("h1","h1",100,0,1);

  for (int i=0; i<100000; i++)
  {
    double piece[N];
    split_by_N(P_mass, piece);

    h1 -> Fill(piece[1]); // say, what's the result for the 3rd guy?

  }
  h1 -> Draw();
  h1 -> SetMaximum();
  h1 -> SetMinimum(0);
  h1 -> SetTitle("How many fraction will No.3 get?");
}


