void split_N(double In, double branch[])
{
  double temp[N-1];
  for (int i=0; i<N-1; i++)
  {
    temp[i] = r -> Rndm();
  }
  
  int ind[N];
  TMath::Sort(N,temp,ind);

  branch[N-1] = 1-temp[N-2]; // the first portion
  
  for (int i=N-2; i>0; i--)
  {
    int id = ind[i];
    int dd = ind[i-1];
    branch[i] = temp[id] - temp[dd];
  }
  branch[0] = temp[0]-0;

}
